<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.cmsc495</groupId>
  <artifactId>currency-converter</artifactId>
  <name>currency-converter</name>
  <version>1.0.0-SNAPSHOT</version>
  <build>
    <finalName>currency-converter</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${maven.compiler.release}</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${main.class}</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <mkdir />
                <copy />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>jpackage</id>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${java.home}/bin/jpackage</executable>
              <workingDirectory>${project.build.directory}</workingDirectory>
              <arguments>
                <argument>--name</argument>
                <argument>${app.name}</argument>
                <argument>--app-version</argument>
                <argument>${jpackage.app-version}</argument>
                <argument>--vendor</argument>
                <argument>UMGC Team</argument>
                <argument>--input</argument>
                <argument>${project.build.directory}/jpackage-input</argument>
                <argument>--main-jar</argument>
                <argument>${project.build.finalName}.jar</argument>
                <argument>--main-class</argument>
                <argument>${main.class}</argument>
                <argument>--dest</argument>
                <argument>${project.build.directory}/dist</argument>
                <argument>--java-options</argument>
                <argument>-Xmx512m</argument>
                <argument>--type</argument>
                <argument>${jpackage.type}</argument>
                <argument>--icon</argument>
                <argument>${jpackage.icon}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <mainClass>edu.cmsc495.Main</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>mac</id>
      <properties>
        <jpackage.type>dmg</jpackage.type>
        <jpackage.icon>${project.basedir}/src/main/resources/app-icon.icns</jpackage.icon>
      </properties>
    </profile>
    <profile>
      <id>windows</id>
      <properties>
        <jpackage.type>exe</jpackage.type>
        <jpackage.icon>${project.basedir}/src/main/resources/app-icon.ico</jpackage.icon>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <properties>
        <jpackage.type>deb</jpackage.type>
        <jpackage.icon>${project.basedir}/src/main/resources/app-icon.png</jpackage.icon>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.10.2</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-jupiter-api</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-params</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-engine</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.release>22</maven.compiler.release>
    <main.class>edu.cmsc495.Main</main.class>
    <jpackage.app-version>1.0.0</jpackage.app-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <junit.version>5.10.2</junit.version>
    <jackson.version>2.17.0</jackson.version>
    <app.name>Currency Converter</app.name>
  </properties>
</project>
